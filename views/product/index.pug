extends ../layouts/common

block content
   h2.text-center.text-secondary Products 
   each product in products
      .card.float-left.m-3.mt-5.position-relative.shadow-lg(
         style='width: 15.3rem;height: 370px'
      ).product__cart
         img.card-img-top(src= product.image, alt='Card image cap')
         .card-body
            h5.card-title= product.name
            p.card-text= product.describe
            .text-danger.position-absolute(style="bottom:10px;left:15px")= product.price
            a.btn.btn-outline-primary.position-absolute(
               href='#'
            ).product__btn Add to cart
 

